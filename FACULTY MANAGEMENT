def delete_faculty():
    fid = input("Enter faculty fid to delete: ").upper()
    if fid in faculty:
        del faculty[fid]
        print("faculty deleted successfully!")
    else:
        print("faculty not found!")




while True:
    print("\n===== MAIN MENU =====")
    print("[1] Add faculty")
    print("[2] View faculty")
    print("[3] Update faculty")
    print("[4] Delete faculty")
    print("[5] Exit")

    choice = input("Enter choice (1-5): ")

    if choice == "1":
        create_faculty()
    elif choice == "2":
        read_faculty()
    elif choice == "3":
        update_faculty()
    elif choice == "4":
        delete_faculty()
    elif choice == "5":
      
        print("Thank you! Exiting program...")
        break
    else:
        print("Invalid choice! Please try again.")





