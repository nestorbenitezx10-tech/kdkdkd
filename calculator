      width: 320px;
    }
    .display {
      width: 100%;
      font-size: 2em;
      margin-bottom: 16px;
      padding: 8px;
      border: none;
      box-sizing: border-box;
      background: #ededed;
      border-radius: 6px;
      text-align: right;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 12px;
    }
    button {
      font-size: 1.1em;
      padding: 16px 0;
      border: none;
      border-radius: 6px;
      background: #2196f3;
      color: #fff;
      cursor: pointer;
      transition: background 0.2s;
    }
    button.operator {
      background: #ff9800;
    }
    button.equal {
      background: #4caf50;
      grid-column: span 2;
