import math
from abc import ABC, abstractmethod

class Shape(ABC):

    def __init__(self, color):
        self.__color = color
        
    def get_color(self):
        return self.__color

    def __str__(self):
        return f"Color: {self.__color}"


class TwoD(Shape):
    def get_area(self):
        pass
    def get_perimeter(self):
        pass



class ThreeD(Shape):
    def get_volume(self):
        pass



class Rectangle(TwoD):
    def __init__(self, color, length, width):
        self.__length = length
        self.__width = width
        super().__init__(color)

    def get_length(self):
        return self.__length

    def get_width(self):
        return self.__width
    
    def get_perimeter(self):
        return 2 * (self.__length + self.__width)

    def get_area(self):
        return self.__width * self.__length

    def __str__(self):
        return f"Rectangle  {super().__str__()}  Length: {self.__length}, Width: {self.__width}"



class Square(TwoD):
    def __init__(self, color, side):
        self.__side = side
        super().__init__(color)

    def get_side(self):
        return self.__side

    def get_area(self):
        return self.__side ** 2

    def get_perimeter(self):
        return 4 * self.__side

    def __str__(self):
        return f"Square  {super().__str__()}  Side: {self.__side}"



class Circle(TwoD):
    def __init__(self, color, radius):
        self.__radius = radius
        super().__init__(color)

    def get_radius(self):
        return self.__radius

    def get_perimeter(self):
        return 2 * 3.14 * self.__radius
    
    def get_area(self):
        return 3.14 * self.__radius ** 2
    
    def __str__(self):
        return f"Circle  {super().__str__()}  Radius: {self.__radius}"



class Prism(ThreeD, Rectangle):
    def __init__(self, color, length, width, height):
        Rectangle.__init__(self, color, length, width)
        self.__height = height

    def get_height(self):
        return self.__height

    def get_volume(self):
        return self.get_area() * self.__height

    def __str__(self):
        return f"Prism  Color: {self.get_color()}  Volume: {self.get_volume()}"


class Cylinder(ThreeD, Circle):
    def __init__(self, color, radius, height):
        Circle.__init__(self, color, radius)
        self.__height = height

    def get_height(self):
        return self.__height

    def get_volume(self):
        return 3.14 * (self.get_radius() ** 2) * self.__height

    def __str__(self):
        return f"Cylinder  Color: {self.get_color()}  Volume: {self.get_volume()}"



class Cube(ThreeD, Square):
    def __init__(self, color, side):
        Square.__init__(self, color, side)

    def get_volume(self):
        return self.get_side() ** 3
        
    def __str__(self):
        return f"Cube  Color: {self.get_color()}  Volume: {self.get_volume()}"




rectangle = Rectangle("blue", 30, 60)
prism = Prism("red", 5, 25, 10)

square = Square("yellow", 10)
cube = Cube("black", 20)

circle = Circle("green", 15)
cylinder = Cylinder("pink", 15, 20)



print(rectangle)
print(f"Area of Rectangle: {rectangle.get_area()}")
print(f"Perimeter of Rectangle: {rectangle.get_perimeter()}")
print()

print(prism)
print(f"Height of Prism: {prism.get_height()}")
print(f"Volume of Prism: {prism.get_volume()}")
print()

print(square)
print(f"Area of Square: {square.get_area()}")
print(f"Perimeter of Square: {square.get_perimeter()}")
print()

print(cube)
print(f"Volume of Cube: {cube.get_volume()}")
print()

print(circle)
print(f"Area of Circle: {circle.get_area()}")
print(f"Perimeter of Circle: {circle.get_perimeter()}")
print()

print(cylinder)
print(f"Height of Cylinder: {cylinder.get_height()}")
print(f"Volume of Cylinder: {cylinder.get_volume()}")

